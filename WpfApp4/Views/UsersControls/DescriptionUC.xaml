<UserControl x:Class="WpfApp4.Views.UsersControls.DescriptionUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp4.Views.UsersControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400" Background="AliceBlue">
    <Grid>
        <Canvas>
            <Label Canvas.Top="10" Canvas.Left="120"  
                   FontSize="26" FontFamily="Comic Sans Ms" FontWeight="Medium"
                   Content="Description"></Label>

            <TextBlock Canvas.Top="60" Canvas.Left="20" Width="350" Height="200"
                       FontSize="22" Text="{Binding Book.Description}"></TextBlock>
        </Canvas>
    </Grid>
</UserControl>
